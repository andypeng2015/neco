*filter
-N PROTECT_GLOBAL
{{ if ne (Metadata "external_ip_address_block") "" }}
-A PROTECT_GLOBAL ! -d {{ Metadata "external_ip_address_block" }} -j RETURN
-A PROTECT_GLOBAL -p tcp -m multiport --dports 80,443 -j RETURN
-A PROTECT_GLOBAL -p udp -m multiport --dports 80,443 -j RETURN
-A PROTECT_GLOBAL -j DROP
{{ end }}
-I INPUT -j PROTECT_GLOBAL
COMMIT